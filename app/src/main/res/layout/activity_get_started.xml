<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetStartedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="FatCal"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="55dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:layout_marginHorizontal="32dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="32dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_editext"
                android:fontFamily="@font/poppins_regular"
                android:hint="Nama"
                />

            <EditText
                android:id="@+id/edt_current_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="32dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_editext"
                android:fontFamily="@font/poppins_regular"
                android:hint="Berat Badan Saat Ini"
                />

            <EditText
                android:id="@+id/edt_target_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="32dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_editext"
                android:fontFamily="@font/poppins_regular"
                android:hint="Berat Badan yang Diinginkan"
                />

            <Spinner
                android:id="@+id/spinner_diet_goal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_editext" />
            <!-- Isi Spinner dengan opsi tujuan diet (cutting, bulking, maintaining) dalam kode Java/Kotlin -->

            <EditText
                android:id="@+id/edt_target_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="32dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_editext"
                android:fontFamily="@font/poppins_regular"
                android:hint="Tanggal Target Capaian"
                />

            <EditText
                android:id="@+id/edt_max_calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="32dp"
                android:background="@drawable/bg_editext"
                android:fontFamily="@font/poppins_regular"
                android:hint="Jumlah Target Maksimum Kalori Harian"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="85dp"
                android:background="@drawable/bg_button"
                android:text="Get Started"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_bold"
                />

            </LinearLayout>

        </LinearLayout>
</ScrollView>
